<launch>

  <node pkg="line_detection" name="image_resizer" type="image-resizer.py" output="screen">
    <param name="use_mono" type="bool" value="false" />
    <param name="use_compressed_format" type="bool" value="true" />
    <param name="subscriber_image_topic" type="str" value="/camera/image_raw" />
    <param name="publisher_image_topic" type="str" value="/line_image" />
    <param name="buffer_size" type="int" value="52428800" />
  </node>

  <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure" output="screen" />

  <node pkg="image_view" name="image_raw" type="image_view" output="screen">
    <remap from="image" to="/camera/image_raw" />
    <param name="~image_transport" value="compressed" />
  </node>

  <node pkg="image_view" name="image_view_line" type="image_view" output="screen">
    <remap from="image" to="/resized_image" />
    <param name="~image_transport" value="compressed" />
  </node> 
  
</launch>